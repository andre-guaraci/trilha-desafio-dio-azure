        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Id)
        </dt>
        <dt class=" col-sm-2">
            @Html.DisplayNameFor(x => x.Nome)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Nome)
        </dt>
        <dt class=" col-sm-2">
